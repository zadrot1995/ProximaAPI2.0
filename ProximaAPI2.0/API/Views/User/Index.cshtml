@model IEnumerable<Domain.Models.User>

<h2 class="center">List of Users</h2>
<h4>Total count: @Model.Count()</h4>

<div class="row">
    <div class="col">
        <a class="waves-effect waves-light btn green darken-3"
           asp-area=""
           asp-controller="User"
           asp-action="Create">
            <i class="material-icons left">add</i>Add user
        </a>

    </div>
</div>
<div class="row">
    <div class="col">
        <table class="highlight">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Login</th>
                    <th>Role</th>
                    <th>Created</th>
                    <th>Last update</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>

                        <td>
                            <img src="https://materializecss.com/images/yuna.jpg" alt="" class="circle responsive-img">
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Login </td>
                        <td>@item.UserRole.ToString() </td>
                        <td>@item.Created.ToString("d") </td>
                        <td>@item.LastUpdate.ToString("d") </td>
                        <td>
                            <a asp-action="Edit" asp-controller="user" asp-route-id="@item.Id" class="btn-floating btn-large waves-effect waves-light green darken-3"><i class="large material-icons">edit</i></a>
                        </td>
                        <td>
                            <form asp-controller="user" asp-action="Delete" method="post" asp-route-id="@item.Id">

                                <button class="btn-floating btn-large waves-effect waves-light red" type="submit" value="Delete"><i class="large material-icons">delete_forever</i></button>
                            </form>

                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
