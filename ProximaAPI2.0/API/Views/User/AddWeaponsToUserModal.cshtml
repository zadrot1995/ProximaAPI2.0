@model Domain.DTOs.UpdateUserModel


<!-- The modal window -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="">
                    @if (Model.EnableWeapons != null && Model.EnableWeapons.Count() != 0)
                    {


                        <div class="row">
                            <div class="col">
                                <table class="highlight">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                            <th>Type</th>
                                        </tr>
                                    </thead>
                                    @for (int i = 0; i < Model.EnableWeapons.Count(); i++)
                                    {
                                        <tbody>
                                            <tr>

                                                <td>
                                                    <img src="https://shopgun.com.ua/image/cache/catalog/15120353-500x370.jpg" alt="" class="square responsive-img">
                                                </td>
                                                <td>@Model.EnableWeapons[i].Name </td>
                                                <td>@Model.EnableWeapons[i].Type.ToString() </td>

                                                <td>

                                                    <div>
                                                        <p>
                                                            <label>
                                                                <input type="checkbox" class="filled-in" asp-for="@Model.EnableWeapons[i].IsSelected" />
                                                                <span>Sellected</span>
                                                                <input type="hidden" asp-for="@Model.EnableWeapons[i].Name" />
                                                                <input type="hidden" asp-for="@Model.EnableWeapons[i].Id" />
                                                                <input type="hidden" asp-for="@Model.EnableWeapons[i].Type" />



                                                            </label>
                                                        </p>
                                                        @*<input type="checkbox" asp-for="@weapon.IsSelected" />
                                                <label asp-for="@weapon.IsSelected">@weapon.Name</label>
                                                <input type="hidden" asp-for="@weapon.Id" />*@
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>

                                    }
                                </table>


                                <button data-dismiss="modal" type="button">Submit</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
            @*<div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
            </div>*@
        </div>
    </div>
</div>
